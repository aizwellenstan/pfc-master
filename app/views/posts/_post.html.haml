.post
  .posts
    .upper-post
      .upper-post__user-name
        = post.user.name
      .upper-post__date
        %time(datetime="#{post.created_at}")= time_ago_in_words(post.created_at)+"前"
    .lower-post
      %table
        %thead
          %tr
            %th FOOD
            %th Calorie
        %tbody
          %tr
            %td 
              = post.food
            %td 
              = post.calorie
      %table
        %thead
          %tr
            %th P
            %th F
            %th C
        %tbody
          %tr
            %td 
              = post.protein # なぜここが@post.proteinじゃダメなのかがまだわからない
            %td 
              = post.fat
            %td 
              = post.carbo
      %table
        %tbody
          %tr
            %td 
              = post.text
      %table
        %tbody
          %tr
            %td 
              = image_tag post.image.url if post.image.present?
      %ul.more_list
        %li
          = link_to '詳細', "/posts/#{post.id}", method: :get # ここのpathは/posts/#{post.id}でも/posts/#{@post.id}でもどっちでもいけちゃう
        %li
          = link_to '編集', "/posts/#{post.id}/edit", method: :get
        %li
          = link_to '削除', "/posts/#{post.id}", method: :delete
