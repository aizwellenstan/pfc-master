.section
  .new-post.col-sm-9
    = form_with model: @post do |f|
      .input-box
        %table.col-sm-12
          %thead
            %tr
              %th.food FOOD
              %th.calorie Calorie
              %th.protein P タンパク質
              %th.fat F 脂質
              %th.carbo C 炭水化物
          %tbody.table-body.table-line
            %tr
              %td 
                = f.text_field :food
              %td 
                = f.number_field :calorie, step: '0.1'
              %td 
                = f.number_field :protein, step: '0.1'
              %td 
                = f.number_field :fat, step: '0.1'
              %td 
                = f.number_field :carbo, step: '0.1'
        .text.col-sm-12
          = f.text_area :text, class: 'post-textarea'
        .icon
          .image-upload
            = f.file_field :image, class: 'image_upload'
        .weight-and-btn
          .weight
            体重
            = f.number_field :weight, step: '0.1'
            kg
          .btn-square
            = f.submit '投稿する', class: 'post-btn'